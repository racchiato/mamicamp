<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:text="nama"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/textView1"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="nama nya apa"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView1"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:id="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="Salary"
              android:layout_marginTop="16dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:id="@+id/salary"
              app:layout_constraintTop_toBottomOf="@+id/editText"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:hint="Salarynya piro"
              app:layout_constraintTop_toBottomOf="@+id/salary"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:id="@+id/editText3" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>

    <TextView android:layout_width="wrap_content"
              android:text="Umur"
              android:layout_marginTop="16dp"
              android:layout_height="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:id="@+id/umur"
              app:layout_constraintTop_toBottomOf="@+id/editText3"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:hint="umur ne"
              android:id="@+id/umurEdittext"
              app:layout_constraintTop_toBottomOf="@+id/umur"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/umurEdittext"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/buttonSimpan" android:layout_marginStart="8dp"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintHorizontal_bias="0.498"/>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:id="@+id/buttonView"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSimpan" android:layout_marginStart="24dp"
            style="@style/Widget.AppCompat.Button.Colored"/>


</android.support.constraint.ConstraintLayout>
